<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".P_test">
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/p_test_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:clickable="true"
        android:textSize="36sp"
        android:text="←"
        android:textColor="@color/qmui_s_link_color"
        app:qmui_borderColor="@color/White"
        app:qmui_isRadiusAdjustBounds="true"
        app:qmui_radius="15dp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/xuanzeitupian"
            android:onClick="click"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取图片"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="36sp"
            android:textColor="@color/qmui_s_link_color"
            app:qmui_borderColor="@color/qmui_s_link_color"
            app:qmui_borderWidth="1px"
            app:qmui_isRadiusAdjustBounds="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:onClick="btn_hongseruo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24sp"
                android:clickable="true"
                android:gravity="center"
                app:qmui_borderWidth="1px"
                android:text="红色色弱"
                tools:ignore="OnClick" />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:onClick="btn_lvseruo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:qmui_borderWidth="1px"
                android:clickable="true"
                android:gravity="center"
                android:textSize="24sp"
                android:text="绿色色弱"
                tools:ignore="OnClick" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:onClick="btn_lanseruo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:qmui_borderWidth="1px"
                android:clickable="true"
                android:gravity="center"
                android:textSize="24sp"
                android:text="蓝色色弱"
                tools:ignore="OnClick" />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:onClick="btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                app:qmui_borderWidth="1px"
                android:gravity="center"
                android:textSize="24sp"
                android:text="还原图片"
                tools:ignore="OnClick" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />




</LinearLayout>